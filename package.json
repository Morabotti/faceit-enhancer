{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "dev": "webpack --mode=development --watch",
    "build": "cross-env NODE_ENV=production webpack --mode=production",
    "test": "cross-env BABEL_ENV=testing ava",
    "lint": "xo",
    "prettier": "prettier --write \"**/*.{js,json,css}\"",
    "release:amo": "web-ext-submit --source-dir dist",
    "release:cws": "webstore upload --source=dist --auto-publish",
    "release": "run-p release:*",
    "bump-version": "node scripts/bump-version.js",
    "git-release": "node scripts/git-release.js"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.4",
    "camelcase-keys": "^4.2.0",
    "copy-text-to-clipboard": "^1.0.4",
    "country-list": "^2.1.0",
    "date-fns": "^2.4.1",
    "detect-browser": "^2.1.0",
    "dom-chef": "^3.1.0",
    "element-ready": "^3.1.0",
    "js-cookie": "^2.2.1",
    "ky": "^0.11.1",
    "lodash": "^4.17.10",
    "mem": "^4.0.0",
    "p-memoize": "^4.0.1",
    "p-retry": "^4.5.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-sortable-hoc": "^0.6.8",
    "select-dom": "^5.1.0",
    "semver-diff": "^2.1.0",
    "style-inject": "^0.3.0",
    "webext-options-sync": "^2.0.1",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/register": "^7.14.5",
    "ava": "^3.15.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "browser-env": "^3.2.5",
    "chrome-webstore-upload-cli": "^1.2.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^4.5.1",
    "core-js": "^3.14.0",
    "cross-env": "^5.1.5",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "execa": "^1.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "load-json-file": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^2.3.1",
    "regenerator-runtime": "^0.13.7",
    "semver": "^6.0.0",
    "sinon": "^4.4.2",
    "svg-inline-loader": "^0.8.2",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "web-ext": "^4.3.0",
    "web-ext-submit": "^4.2.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.7.2",
    "write-json-file": "^3.2.0",
    "xo": "^0.20.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "xo --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "env": "browser",
    "globals": [
      "chrome"
    ],
    "extends": [
      "xo-react"
    ],
    "plugins": [
      "react"
    ],
    "settings": {
      "react": {}
    },
    "prettier": true,
    "space": true,
    "rules": {
      "react/prop-types": 0,
      "react/jsx-sort-props": 0
    }
  },
  "ava": {
    "require": [
      "@babel/register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": true,
    "verbose": true
  },
  "babel": {
    "env": {
      "testing": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "useBuiltIns": "usage",
              "corejs": 3
            }
          ],
          [
            "@babel/preset-react",
            {
              "pragma": "h",
              "useBuiltIns": true
            }
          ]
        ]
      }
    }
  }
}
